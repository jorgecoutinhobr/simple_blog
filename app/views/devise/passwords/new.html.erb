<%= form_for(resource, as: resource_name, url: password_path(resource_name), class: 'card flex flex-col gap' ,html: { method: :post }) do |form| %>
  <div class="flex flex-col gap-half">
    <h3 class="text-2xl font-semibold leading-none"><%= t('text.forgot_password') %></h3>
    <p class="text-sm text-subtle"><%= t('text.reset_account') %></p>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex flex-col gap mb-2">
    <div class="flex flex-col gap-half">
      <%= form.label :email, class: "text-sm font-medium leading-none" %>
      <%= form.email_field :email, autocomplete: 'email', class: "input", autofocus: true %>
    </div>
  </div>

  <div class="flex items-center mb-2">
    <%= form.submit t('button.login'), class: "btn btn--primary i-full" %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>


