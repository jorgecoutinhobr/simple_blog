<% content_for :title, t('button.edit') %>

<% content_for :primary_content do %>
  <%= link_to t('text.back_to_posts'), posts_path, class: 'btn btn--primary btn-lg btn-wide' %>
<% end %>

<% content_for :secondary_content do %>
  <h1 class="font-bold text-4xl mbe-4">Editing post</h1>
  <%= render "form", post: @post %>

  <div class="inline-flex flex-wrap items-center gap mbs-2" style="--row-gap: .5rem">
    <%= link_to t('button.show_post'), @post, class: "btn" %>
    <%= link_to t('text.back_to_posts'), posts_path, class: "btn" %>
  </div>
<% end %>

<%= render "sidebar_layout" %>  