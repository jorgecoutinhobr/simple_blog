<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "card flex flex-col gap") do |form| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex flex-col gap-half">
    <h3 class="text-2xl font-semibold leading-none">Sign up</h3>
    <p class="text-sm text-subtle">Enter your email below to create to your account.</p>
  </div>

  <div class="flex flex-col gap mb-2">
    <div class="flex flex-col gap-half">
      <%= form.label :nickname, class: "text-sm font-medium leading-none" %>
      <%= form.text_field :nickname, class: "input", required: true %>
    </div>

    <div class="flex flex-col gap-half">
      <%= form.label :email, class: "text-sm font-medium leading-none" %>
      <%= form.email_field :email, placeholder: "m@example.com", class: "input", required: true %>
    </div>

    <div class="flex flex-col gap-half">
      <%= form.label :password, class: "text-sm font-medium leading-none" %>
      <%= form.password_field :password, class: "input", required: true %>
    </div>

    <div class="flex flex-col gap-half">
      <%= form.label :password_confirmation, class: "text-sm font-medium leading-none" %>
      <%= form.password_field :password_confirmation, class: "input", required: true %>
    </div>
  </div>

  <div class="flex items-center">
    <%= form.submit "Sign up", class: "btn btn--primary i-full" %>
  </div>

  <span class="text-subtle text-sm">Already have a account?<%= render "devise/shared/links" %></span>
<% end %>