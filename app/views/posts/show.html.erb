<%= render @post %>

<div class="flex flex-wrap items-center gap mbs-6" style="--row-gap: .5rem">
  <%= link_to "Edit this post", edit_post_path(@post), class: "btn" %>
  <%= link_to "Back to posts", posts_path, class: "btn" %>
  <%= button_to "Destroy this post", @post, method: :delete, class: "btn" %>
</div>
