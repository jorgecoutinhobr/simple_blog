<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "card flex flex-col gap", html: { method: :put }) do |form| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex flex-col gap-half">
    <h3 class="text-2xl font-semibold leading-none"><%= t('button.edit') %></h3>
  </div>

  <div class="flex flex-col gap mb-2">
    <div class="flex flex-col gap-half">
      <%= form.label :nickname, class: "text-sm font-medium leading-none" %>
      <%= form.text_field :nickname, class: "input" %>
    </div>

    <div class="flex flex-col gap-half">
      <%= form.label :email, class: "text-sm font-medium leading-none" %>
      <%= form.email_field :email, placeholder: "m@example.com", class: "input" %>
    </div>

    <div class="flex flex-col gap-half">
      <%= form.label :password, class: "text-sm font-medium leading-none" %>
      <%= form.password_field :password, class: "input" %>
    </div>

    <div class="flex flex-col gap-half">
      <%= form.label :password_confirmation, class: "text-sm font-medium leading-none" %>
      <%= form.password_field :password_confirmation, class: "input" %>
    </div>

    <div class="flex flex-col gap-half">
      <%= form.label t('text.current_password'), class: "text-sm font-medium leading-none" %> <i>(<%= t('text.current_password_text') %>)</i>
      <%= form.password_field :current_password, class: "input" %>
    </div>
  </div>

  <div class="flex items-center">
    <%= form.submit t('button.update'), class: "btn btn--primary i-full" %>
  </div>

  <div><%= t('text.unhappy?') %> <%= button_to t('text.cancel_account'), registration_path(resource_name), 
                                                                          data: { confirm: t('text.are_you_sure'), 
                                                                          turbo_confirm: t('text.are_you_sure') }, 
                                                                          method: :delete,
                                                                          style: "cursor: pointer;" %></div>

  <%= link_to t('button.back'), :back %>
<% end %>